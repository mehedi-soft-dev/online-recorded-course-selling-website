@model SignInModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_SimpleLayout.cshtml";
}

<div class="register-box">
    <div class="card card-outline card-primary">
        <div class="card-header text-center" style="background-color:#15161D;border-bottom: 3px solid #D10024;">
            <a asp-area="Identity" asp-controller="Home" asp-action="Index" class="h1" style="color:#fff;">
                <b>e-Edu</b>
            </a>
        </div>
        <div class="card-body">
            <p class="login-box-msg">Sign In </p>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form id="SignUpForm" asp-antiforgery="true" asp-controller="Account" asp-action="Login" method="post">

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="input-group mb-3">
                    <input type="email" class="form-control" asp-for="Email" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Email" class="text-danger input-group"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                    <span asp-validation-for="Password" class="text-danger input-group"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <input type="checkbox" asp-for="RememberMe">
                            <label asp-for="RememberMe">
                                RememberMe
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-danger btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
            <div class="text-center">
                <br />
                <p>-OR-</p>
                <a asp-asp-controller="Account" asp-action="SignUp" class="text-center">Sign Up</a>
            </div>
        </div>
        <!-- /.form-box -->
    </div><!-- /.card -->
</div>
<!-- /.Signin-box -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

