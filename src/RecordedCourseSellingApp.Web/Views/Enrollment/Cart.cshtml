@model CartDetailsModel

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">

        @if (Model.CartItems != null && Model.CartItems.Count() > 0)
        {
            <div class="cart-list">
                <table border="0">

                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td style="width:5%">
                                #
                            </td>
                            <td style="width:10%; text-align:center">
                                <a asp-area="" asp-controller="Enrollment" asp-action="RemoveFromCart" asp-route-id="@item.CartItemId" style="color:red"><i class="fa fa-trash" aria-hidden="true"></i></a>
                            </td>
                            <td width="40%">
                                <span style="font-weight:700">@item.Title</span>
                            </td>
                            <td style="width:15%">
                                <img src="/UploadedFiles/Course/Thumbnail/@item.ThumbnailImage" alt="" style="display:block; height:100%; width:100%;">
                            </td>

                            <td style="width:25%; text-align:right;">
                                <span style="font-weight:700">BDT @item.Price.ToString("0,000")/=</span>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                <h5 style="text-align:center;">You'r Cart is Empty!</h5>
            </div>
        }
        <div class="cart-summary text-right">
            <small>@Model.CartItems!.Count() Item(s) selected</small>
            <h5 style="padding:10px 0;">SUBTOTAL:  BDT @Model.CartItems!.Sum(x => x.Price)/=</h5>
        </div>

        <div class="text-right">
            @if (Model.CartItems != null && Model.CartItems.Count() > 0)
            {
                <a asp-area="" asp-controller="Enrollment" asp-action="Checkout" class="btn btn-red">Checkout  <i class="fa fa-arrow-circle-right"></i></a>
            }
        </div>
    </div>
    <div class="col-md-3"></div>
</div>
